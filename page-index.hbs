{{!< default}}

<main role="main">
    <div class = "container">
		<header class="post-header">
<!-- Sanminimal logo, links to homepage -->
			<a class="blog-logo" href="{{@blog.url}}"><img src="{{asset "images/Logo.svg"}}" alt="{{@blog.title}}" /></a>
		</header>
        
        <div class = "issue-info">{{date format = 'MMMM YYYY'}}|no.{{date format = 'D'}}</div>
        <div class = "publication-info">PRINTED IN NY</div>
        <div class = "cover-image">
            <img src="{{asset "images/index.jpg"}}" alt="portrait" />
	    </div>
        
        <div class = "center-container">
<!--Search form using ghostHunter-->
            <div class = "search-form">
                <form>
                    <img src = "{{asset "images/search.svg"}}"/>
                    <input class = "search-field" type = "text" placeholder = "Search" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search'"/>
                </form>
            </div>
<!--Search results from ghostHunter, hides index container upon showing results-->
            <section class="search-results"></section>

<!--Contains index of loosely categorized posts-->
            <div class = "index-container">
                {{#get "posts" limit="all"}}
                    {{#foreach posts}}
                        <span>
                            <a class = "post-link" href="{{url}}">{{title}}</a>
                        </span>
                        <br>
                    {{/foreach}}
                {{/get}}
            </div>
        </div>
        
    </div>
</main>